@model List<PastBeam.Core.Library.Entities.Folder>

<h2>Folders</h2>

<div class="folder-container">
    <div class="folder-button">
        <button class="create-folder-button" onclick="openPopup('folderPopup')"> Create folder</button>
    </div>

    @if (Model != null && Model.Any())
    {
        <ul>
            @foreach (var folder in Model)
            {
                <li>
                    <div class="button-container folder-item">
                        <form asp-controller="Folder" asp-action="GetFolderArticles" method="get">
                            <input type="hidden" name="folderId" value="@folder.Id" />
                            <button type="submit">@folder.Name</button>
                        </form>
                    </div>
                    <div class="button-container delete-folder">
                        <form asp-controller="Folder" asp-action="DeleteFolder" method="post">
                            <input type="hidden" name="folderId" value="@folder.Id" />
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>You haven`t created folders yet</p>
    }
</div>

<div id="folderPopup" class="popup-overlay" style="display:none;">
    <div class="popup">
        <form asp-controller="Folder" asp-action="CreateFolder" method="post">
            <h2>Create folder</h2>
            <div class="column-container">
                <input  name="folderName" type="text" placeholder="Folder name" required />
            </div>

            <div class="popup-buttons">
                <button type="button" onclick="closePopup('folderPopup')">Cancel</button>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<style>
    .folder-container {
        position: relative;
        margin: 0.5%;
        background: white;
        border-radius: 5px;
        height: 90%;
        padding: 10px;
    }

    .create-folder-button{
        margin-bottom: 10px;
    }

    .button-container.folder-item {
        flex-grow: 4;
    }

    .button-container.delete-folder {
        flex-grow: 1;
    }

    ul {
        display:flex;
        flex-direction: column;
        gap: 10px;
        max-height: 90%;
        overflow-y: auto;
        padding-right: 10px;
    }

    li {
        display:flex;
        flex-direction:row;
        gap: 10px;
        list-style:none;
    }

    .button-container button {
        padding: 6px 12px;
        width: 100%;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .button-container button:hover {
        background-color: #007bff;
        color: white;
    }

    .button-container {
        display: flex;
    }

    .button-container form {
        display: flex;
        flex-grow: 1;
    }


    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .popup {
        background: white;
        padding: 20px;
        border-radius: 10px;
        width: 30%;
        display: flex;
        flex-direction: column;
        gap: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .popup input {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: box-shadow 0.3s ease;
        outline: none;
    }

    .popup-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 10px;
    }

    .popup-buttons button, .create-folder-button {
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .popup-buttons button:first-child {
        background-color: white;
        border: 1px #007bff solid;
    }

    .popup-buttons button:last-child {
        background-color: #4CAF50;
        color: white;
    }

    .column-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .popup button, .create-folder-button {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .popup button:hover, .folder-button button:hover {
        background-color: #007bff;
        color: white;
    }

    .popup input:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
        border: 1px solid #258cfb;
    }
</style>

<script>
    function openPopup(id) {
        document.getElementById(id).style.display = 'flex';
    }

    function closePopup(id) {
        document.getElementById(id).style.display = 'none';
    }
</script>