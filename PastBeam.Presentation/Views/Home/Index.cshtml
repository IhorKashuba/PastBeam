<style>
    .menu-page-container {
        padding: 30px 60px;
        height: 80%;
    }

    .category-blocks-section {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
    }

    .category-block {
        padding: 12px 28px;
        margin: 0 6px;
        background-color: #fef3e8;
        border-radius: 5px;
    }

    .category-link {
        text-decoration: none;
        font-weight: bold;
        font-size: 18px;
        color: #4a3f35;
    }

    .category-block:nth-child(3) {
        background-color: #c9b29c;
        color: white;
    }

        .category-block:nth-child(3) .category-link {
            color: #fff;
        }

    .content-cards-section {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-arrow {
        font-size: 28px;
        background: none;
        border: none;
        color: #7d6b59;
        cursor: pointer;
        padding: 10px 20px;
    }

    .cards-wrapper {
        height: 100%;
        width: 100%;
        display: flex;
        gap: 30px;
    }

    .content-card {
        display: flex;
        flex-direction:column;
        width: 40%;
        height: 100%;
        background-color: white;
        border-radius: 8px;
        padding: 10px; 
    }

    .content-card button {
        flex-grow: 1;
    }

    .content {
        flex-grow: 2;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .info {
        display: flex;
        flex-direction: column;
    }

    .card-image-placeholder {
        width: 30%;
        height: 100%;
        background-color: gray;
        text-align: center;
        border-radius: 5px;
    }

    .content-description {
        flex-grow: 10;
    }

    button, .article-button {
        padding: 6px 12px;
        border: 1px solid #007bff;
        color: #007bff;
        border-radius: 5px;
        cursor: pointer;
        background-color: white;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    button:hover, .article-button:hover {
        background-color: #007bff;
        color: white;
    }

    .article-button {
        text-decoration: none;
        width:90%;
        text-align:center;
    }

</style>