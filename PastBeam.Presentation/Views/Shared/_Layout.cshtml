<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>

    <div id="sidebar" class="sidebar">

        <div class="p-3 d-flex align-items-center justify-content-between border-bottom">
            <button id="menu-close" aria-label="Закрити меню" class="btn btn-light text-primary fs-4 p-0">☰</button>
            <span class="text-primary fw-bold">PastBeam</span>
        </div>

        <div class="p-3">
            <ul class="list-unstyled">
                <li class="mb-3"><a href="#" class="d-flex align-items-center text-primary gap-2 text-decoration-none">Main Page</a></li>
                <li class="mb-3"><a href="#" class="d-flex align-items-center text-primary gap-2 text-decoration-none">Your Folders</a></li>
                <li class="mb-3"><a href="#" class="d-flex align-items-center text-primary gap-2 text-decoration-none">Favorite</a></li>
                <li class="mb-3"><a href="#" class="d-flex align-items-center text-primary gap-2 text-decoration-none">Courses</a></li>
            </ul>
        </div>

    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                
                <div class="d-flex flex-row align-items-center gap-3">
                    <button id="menu-toggle" aria-label="Відкрити меню">☰</button>

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PastBeam</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>


                <div class="search-bar d-flex align-items-center mx-4 flex-grow-1" style="max-width: 500px;">
                    <input type="text" class="form-control me-2" placeholder="Пошук..." />
                    <button class="btn btn-outline-primary" type="button">Search</button>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <a class="nav-link text-dark text-decoration-none" asp-area="" asp-controller="#" asp-action="#">Login</a>
                    <a class="nav-link text-dark text-decoration-none" asp-area="" asp-controller="#" asp-action="#">Register</a>
                </div>

            </div>
        </nav>
    </header>
    <div class="main-container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PastBeam.Presentation1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
