@model List<PastBeam.Core.Library.Entities.Article>



@if (Model != null && Model.Any())
{
    <div class="article-list">
        <h3 class="article-list-text">All Articles</h3>

        <ul>
            @foreach (var article in Model)
            {
                <li class="article-item">
                    <div class="d-flex flex-row justify-content-between align-items-center article-item-container p-2 flex-grow-1 text-center">
                        <h4>@article.Title</h4>
                        <div><strong>Published:</strong> @article.CreatedAt.ToShortDateString()</div>
                        <div><strong>Updated At:</strong> @article.UpdatedAt.ToShortDateString()</div>
                        <a class="text-center read-more-button" asp-action="GetArticleDetails" asp-route-id="@article.Id">Read More</a>
                    </div>
                </li>
            }
        </ul>
    </div>

}
else
{
    <div class="article-list">
        <p>No articles available.</p>
    </div>
}


<style>

    .article-list {
        max-height: 90%; /* або інша зручна висота */
        overflow-y: auto;
        padding: 10px;
        background-color: white;
        border-radius: 8px;
        margin-top: 2%;
    }

    .read-more-button {
        padding: 6px 12px;
        border: 1px solid #007bff;
        color: #007bff;
        border-radius: 5px;
        cursor: pointer;
        background-color: white;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: 10px;
        margin-bottom: 10px;
        text-decoration: none;
    }

    .read-more-button:hover {
        background-color: #007bff;
        color: white;
    }

</style>